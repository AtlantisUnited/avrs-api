{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "root": true,
  "env": {
    "node": true,
    "mocha": true,
  },
  "globals": {},
  "rules": {
    "semi": [2, "never"],
    "max-len": [2, 120, 2, {
      "ignoreUrls": true,
      "ignoreComments": false
    }],
    "global-require": 0,
    "import/no-unresolved": 0,
    "no-underscore-dangle": [2, {
      "allowAfterThis": false,
      "allow": ["_id"]
    }],
    "no-param-reassign": [2, { 
      "props": false
    }],
    "arrow-body-style": 0,
    "arrow-parens": 0,
    "import/prefer-default-export": 0,
    "import/no-extraneous-dependencies": 0
  }
}
